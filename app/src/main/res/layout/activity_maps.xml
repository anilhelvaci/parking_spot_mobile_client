<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
    >
    <fragment
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity"
        />

    <ImageButton
        android:id="@+id/image_button_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="24dp"
        android:elevation="8dp"
        android:src="@drawable/background_selector"
        android:background="@drawable/background_location"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        android:elevation="8dp"
        app:cardBackgroundColor="@color/colorTransparent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_camera_info"
            >

            <TextView
                android:id="@+id/camera_name"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera Name"
                android:layout_centerHorizontal="false"
                android:layout_toEndOf="@id/camera_image"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/camera_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera Address"
                android:layout_centerHorizontal="false"
                android:layout_toEndOf="@id/camera_image"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/camera_name"/>

            <TextView
                android:id="@+id/empty_spots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_toEndOf="@id/camera_image"
                android:text="Empty Spots"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_below="@+id/camera_address"
                />

            <ImageView
                android:id="@+id/camera_image"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_linked_camera_info"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@id/empty_spots"
                android:layout_alignTop="@id/camera_name"
                />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>